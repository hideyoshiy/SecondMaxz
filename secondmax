<body>
  <!-- Legal Consent Modal -->
  <div id="legalModal">
    <div id="legalBox">
      <h2>Welcome to SecondMaxz</h2>
      <p>
        By continuing, you acknowledge and agree that SecondMaxz is a platform for
        users to buy and sell second-hand items. All transactions, listings, and
        items are the full responsibility of the individual sellers. SecondMaxz
        is not liable for any disputes, damages, or losses arising from the use
        of this platform.
      </p>
      <button id="agreeBtn" onclick="agreeToTerms()">I Understand and Agree</button>
    </div>
  </div>

  <header>
    <div class="logo">
      <div class="logo-circle">S</div>
      <h1>SecondMaxz</h1>
    </div>
    <div class="cart" onclick="toggleCart()">ðŸ›’ Cart (<span id="cartCount">0</span>)</div>
  </header>

  <section id="itemForm">
    <h2>List an Item</h2>
    <input type="text" id="title" placeholder="Item Title" />
    <input type="number" id="price" placeholder="Price (USD)" />
    <input type="text" id="image" placeholder="Image URL" />
    <textarea id="description" placeholder="Item Description"></textarea>
    <button onclick="addItem()">Add Item</button>
  </section>

  <section id="itemsContainer"></section>

  <div id="cartItems">
    <h3>Your Cart</h3>
    <ul id="cartList"></ul>
    <button id="checkoutBtn" onclick="checkout()">Checkout</button>
  </div>

  <script>
    let items = [];
    let cart = [];

    function agreeToTerms() {
      document.getElementById('legalModal').style.display = 'none';
      document.body.style.overflow = 'auto';
      document.querySelectorAll('header, section, .cart').forEach(el => {
        el.style.filter = 'none';
        el.style.pointerEvents = 'auto';
        el.style.userSelect = 'auto';
      });
    }

    function addItem() {
      const title = document.getElementById('title').value;
      const price = parseFloat(document.getElementById('price').value);
      const image = document.getElementById('image').value;
      const description = document.getElementById('description').value;

      if (!title || !price || !image) {
        alert('Please fill in all fields.');
        return;
      }

      const item = { title, price, image, description };
      items.push(item);
      renderItems();
      document.getElementById('title').value = '';
      document.getElementById('price').value = '';
      document.getElementById('image').value = '';
      document.getElementById('description').value = '';
    }

    function renderItems() {
      const container = document.getElementById('itemsContainer');
      container.innerHTML = '';
      items.forEach((item, index) => {
        const box = document.createElement('div');
        box.classList.add('item');
        box.innerHTML = `
          <img src="${item.image}" alt="${item.title}">
          <h3>${item.title}</h3>
          <p>${item.description}</p>
          <p><strong>$${item.price.toFixed(2)}</strong></p>
          <button onclick="addToCart(${index})">Add to Cart</button>
        `;
        container.appendChild(box);
      });
    }

    function addToCart(index) {
      cart.push(items[index]);
      document.getElementById('cartCount').innerText = cart.length;
    }

    function toggleCart() {
      const cartBox = document.getElementById('cartItems');
      cartBox.style.display = cartBox.style.display === 'none' || cartBox.style.display === '' ? 'block' : 'none';
      renderCart();
    }

    function renderCart() {
      const list = document.getElementById('cartList');
      list.innerHTML = '';
      cart.forEach((item) => {
        const li = document.createElement('li');
        li.textContent = `${item.title} - $${item.price.toFixed(2)}`;
        list.appendChild(li);
      });
    }

    function checkout() {
      const total = cart.reduce((sum, item) => sum + item.price, 0);
      const fee = total * 0.067;
      const sellerAmount = total - fee;
      alert(`Checkout Summary:
Total: $${total.toFixed(2)}
Platform Fee (6.7%): $${fee.toFixed(2)}
Seller Receives: $${sellerAmount.toFixed(2)}
(This is a mock checkout.)`);
    }
  </script>
</body>
